{
  "name": "product",
  "urls": [
    "http://test.site.com/index.html"
  ],
  "page": {
    "name": "default",
    "sets": {
      "default": {
        "name": "default",
        "parent": {
          "selector": ".product"
        },
        "selectors": {
          "a": {
            "selector": "a",
            "rules": {
              "other_page": {
                "capture": "attr-href", 
                "name": "other_page", 
                "follow": true
              },
              "name": {
                "capture": "text", 
                "name": "name"
              }    
            }
          }
        },
        "pages": {
          "other_page": {
            "name": "other_page",
            "sets": {
              "default": {
                "name": "default",
                "selectors": {
                  ".color": {
                    "selector": ".color",
                    "rules": {
                      "color": {
                        "name": "color",
                        "capture": "text"
                      }
                    }
                  },
                  ".size-box span": {
                    "selector": ".size-box span",
                    "rules": {
                      "size": {
                        "name": "size",
                        "capture": "text"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
