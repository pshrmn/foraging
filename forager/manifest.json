{
  "manifest_version": 2,
  "name": "Forager",
  "description": "Create rules to gather data from web pages",
  "version": "1.9",
  "permissions": [
    "activeTab",
    "storage",
    "http://localhost/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "img/icon48.png"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}
